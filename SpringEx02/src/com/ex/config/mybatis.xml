<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
  
  <configuration>
 	<settings> <!-- 카멜 표기법은 뛰어쓰기 대신에 대문자로 표시를함 
 					Under_Score = 뛰어쓰기 대신에 언더바(_)를 씀-->
 		<setting name="mapUnderscoreToCamelCase" value="true" />
 	</settings>
  	<mappers>	<!-- mapper 앨리먼트는 여러개 선언 가능 -->
  		<mapper resource="com/ex/config/mapper.xml" /> <!-- 위치 지정 -->
  	</mappers>
  </configuration>